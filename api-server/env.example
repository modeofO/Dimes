# Server Configuration
PORT=3000
NODE_ENV=development

# CAD Backend Configuration (Python/pythonOCC)
# For local development:
CPP_BACKEND_HOST=127.0.0.1
CPP_BACKEND_PORT=8080
CPP_BACKEND_TIMEOUT=30000

# For Railway deployment (use internal networking):
# CPP_BACKEND_HOST=cad-backend.railway.internal
# CPP_BACKEND_PORT=8080

# Security
JWT_SECRET=your-jwt-secret-here
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# For local development (comma-separated):
CORS_ORIGIN=http://localhost:3001,http://localhost:5173

# For Railway deployment:
# CORS_ORIGIN=https://client-production-xxxx.up.railway.app

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads

# WebSocket
WS_HEARTBEAT_INTERVAL=30000 